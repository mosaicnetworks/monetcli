		"evm-lite-utils": "^1.0.0",
		"figlet": "^1.2.3",
		"inquirer": "^6.4.1",
		"mkdirp": "^0.5.1",
		"vorpal": "^1.12.0"
	},
	"devDependencies": {
		"@types/figlet": "^1.2.0",
		"@types/inquirer": "^6.0.3",
		"@types/jest": "^24.0.15",
