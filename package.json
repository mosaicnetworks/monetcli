		"tslint": "^5.18.0",
		"tslint-config-airbnb": "^5.11.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.2"
	},
	"bin": {
		"monetcli": "./dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mosaicnetworks/monetcli.git"
	},
	"pkg": {
		"assets": [
			"./node_modules/figlet/fonts/Standard.flf"
		],
