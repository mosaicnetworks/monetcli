	"scripts": {
		"prepublish": "npm run build",
		"clean": "rm -rf node_modules dist bin package-lock.json",
		"build": "tsc -p tsconfig.json",
		"build:watch": "npm run build --watch",
		"test": "jest",
		"dev": "yarn install --registry http://192.168.1.4:4873",
		"publish:dev": "yarn publish --registry http://192.168.1.4:4873",
		"add:dev": "yarn add --registry http://192.168.1.4:4873",
		"i": "ts-node src/index i --debug",
		"pkg": "pkg . --out-path ./bin"
	},
	"dependencies": {
		"ascii-table": "^0.0.9",
		"chalk": "^2.4.2",
		"evm-lite-cli": "^1.0.0",
		"evm-lite-client": "^1.0.0",
		"evm-lite-consensus": "^1.0.0",
		"evm-lite-core": "^1.0.0",
